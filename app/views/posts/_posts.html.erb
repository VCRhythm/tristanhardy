<table class="table">
  <thead>
    <tr>
      <th>Posts</th>
      <th>Comments</th>
      <th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><strong><%= link_to post.title, post %></strong></td>
        <td><%= post.comments.size %></td>
        <td><%= render 'posts/tags', post: post %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
