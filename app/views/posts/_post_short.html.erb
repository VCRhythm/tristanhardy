<div class="panel panel-default">
  <div class="panel-heading">
    <strong><%= link_to post.title, post %></strong>
    <span class="pull-right"><%= post.date.to_formatted_s(:long_ordinal) %></span>
  </div>
  <div class="panel-body">
    <%= post.short_body.html_safe %>...
    <p><%= link_to "(Click for more)", post %></p>
  </div>
  <div class="panel-footer">
    <p>Comments: <%= post.comments.size %></p>
    <%= render 'posts/tags', post: post %>
  </div>
</div>
