<%= form_for([@post, @comment], html:{class:"form-horizontal"}) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username, "Your Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :username, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_area :body, class: "form-control", rows: 3 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "Your Email", class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :website, "Your Website", class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :website, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: "col-xs-offset-1 col-sm-3 btn btn-success" %>
    <%= link_to 'Cancel', @post, class: "btn btn-danger col-sm-offset-4 col-sm-3" %>
  </div>
<% end %>
