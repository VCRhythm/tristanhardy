<li class="media">
<div class="media-body">
<p>
  <h4 class="media-heading"><strong><%= comment.subject %></strong>
  on <%= comment.date.to_formatted_s(:long_ordinal) %>
  </h4>
  <i>by</i> <%= comment.username %>
  <% if current_user != nil && current_user.admin? %>
    <%= link_to "Edit", edit_post_comment_path(@post, comment), class: 'btn btn-info pull-right' %>
    <%= link_to "Delete", post_comment_path(@post, comment), method: 'delete', class: 'btn btn-danger pull-right', confirm: "Are you sure?" %>
  <% end %>
</p>

<p>
  <%= comment.body %>
</p>

<% if !comment.email.empty? || !comment.website.empty? %>
<p><small>
  <% if !comment.email.empty? %>
    <%= comment.email %>
  <% end %>
  <% if !comment.email.empty? && !comment.website.empty? %>
    <br />
  <% end %>
  <% if !comment.website.empty? %>
    <%= comment.website %>
  <% end %>
  </small>
</p>
<% end %>
</div>
</li>
